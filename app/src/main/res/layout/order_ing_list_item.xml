<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/order_id"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="No.1234"/>
    
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_view_bg"
        android:padding="1dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            >
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务中"
                android:layout_centerInParent="true"
                android:textColor="@color/orange"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:text="详情"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            >
            <ImageView
                android:id="@+id/time_img"
                style="@style/Order_LeftImg_Style"
                android:src="@drawable/time"/>

            <TextView
                android:id="@+id/time"
                style="@style/Order_CenterText_Style"
                android:text="2015/03/26 15:30"
                android:layout_toRightOf="@+id/time_img"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            >
            <ImageView
                android:id="@+id/carType_img"
                style="@style/Order_LeftImg_Style"
                android:src="@drawable/carinfo"/>

            <TextView
                android:id="@+id/carType"
                style="@style/Order_CenterText_Style"
                android:text="浙A 88888 奥迪A6L 黑色 车外清洗"
                android:layout_toRightOf="@+id/carType_img"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            >
            <ImageView
                android:id="@+id/location_img"
                style="@style/Order_LeftImg_Style"
                android:src="@drawable/position"/>

            <TextView
                android:id="@+id/location"
                style="@style/Order_CenterText_Style"
                android:text="杭州市西湖区行政特别服务中心车辆"
                android:layout_toRightOf="@+id/location_img"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            >
            <ImageView
                android:id="@+id/xiaoEr_img"
                style="@style/Order_LeftImg_Style"
                android:src="@drawable/number"/>

            <TextView
                android:id="@+id/xiaoEr"
                style="@style/Order_CenterText_Style"
                android:text="小二9527"
                android:layout_toRightOf="@+id/xiaoEr_img"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/phone"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>