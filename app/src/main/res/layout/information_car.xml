<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/lightgray"
    android:id="@+id/cityname">

    <include layout="@layout/information_head"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/CommonBar_LinearLayout_Style"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                />

            <LinearLayout
                style="@style/CommonBar_InLinearLayout_Style">
                <ImageView
                    style="@style/CommonBar_LeftImg_Style"
                    android:src="@drawable/car_number"/>
                <TextView
                    style="@style/CommonBar_LeftText_Style"
                    android:id="@+id/province"
                    android:text="æµ™"
                    />
                <ImageView
                    style="@style/CommonBar_RightImg_Style1"
                    android:src="@drawable/raw"
                    android:clickable="true"
                    android:onClick="click_to_province_choose"
                    />
                <EditText
                    style="@style/CommonBar_CenterText_Style"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:hint="@string/car_number"
                    android:id="@+id/number"
                    android:layout_weight="16.0"
                    android:background="@null"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                />

            <LinearLayout
                style="@style/CommonBar_InLinearLayout_Style"
                android:clickable="true"
                android:onClick="click_to_choose_car_brand">
                <ImageView
                    style="@style/CommonBar_LeftImg_Style"
                    android:src="@drawable/carinfo"/>
                <TextView
                    style="@style/CommonBar_CenterText_Style"
                    android:clickable="true"
                    android:id="@+id/brand"
                    android:onClick="click_to_brand_choose"
                    android:text="@string/car_icon"
                    />
                <ImageView
                    style="@style/CommonBar_RightImg_Style"
                    android:clickable="true"
                    android:onClick="click_to_brand_choose"
                    android:src="@drawable/arrow_gray_right"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                />

            <LinearLayout
                style="@style/CommonBar_InLinearLayout_Style">
                <ImageView
                    style="@style/CommonBar_LeftImg_Style"
                    android:src="@drawable/color"/>
                <TextView
                    android:id="@+id/color"
                    style="@style/CommonBar_CenterText_Style"
                    android:text="@string/car_color"
                    android:clickable="true"
                    android:onClick="click_to_color_choose"
                    />
                <ImageView
                    style="@style/CommonBar_RightImg_Style"
                    android:clickable="true"
                    android:onClick="click_to_color_choose"
                    android:src="@drawable/arrow_gray_right"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        />
    <LinearLayout
        style="@style/CommonBar_InLinearLayout_Style"
        android:layout_height="50dp"
        android:background="@color/lightgray"
        >
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_weight="20.0"
            style="@style/CommonBar_CenterText_Style"
            android:text="@string/car_usual"
            />
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        />

    <ListView
        android:id="@+id/common_car_listview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

     </ListView>

</LinearLayout>

